---
import { fetchNumberSequences } from '../../api';
import { PaginatedSequenceList } from '../../components/PaginatedSequenceList';
import { getConfig } from '../../config';
import BaseLayout from '../../layouts/BaseLayout.astro';

const config = getConfig();
const numberSequences = await fetchNumberSequences();
---

<BaseLayout title='Sequences'>
  <!-- The number of sequences is quick to load and will be rendered on the server side -->
  Number sequences: {numberSequences}

  <!-- Loading the full sequence list takes time and will be done on the client side -->
  <div><PaginatedSequenceList client:load config={config} /></div>
</BaseLayout>

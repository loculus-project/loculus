<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%date %level [%thread] [%X{RequestId}] [%X{organism}] - %class: %message%n</Pattern>
        </encoder>
    </appender>

    <appender name="SQL_FILE" class="ch.qos.logback.core.FileAppender">
        <file>tmp/sql-debug.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date %level - %message%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="Exposed" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SQL_FILE"/>
    </logger>

    <logger name="org.loculus" level="debug" />
    <logger name="org.testcontainers" level="warn" />
    <logger name="ch.qos.logback" level="warn" />
</configuration>
